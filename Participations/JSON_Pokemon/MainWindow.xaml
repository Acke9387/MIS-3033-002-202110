<Window x:Class="JSON_Pokemon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_Pokemon"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="cboPokies" HorizontalAlignment="Left" Margin="59,57,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboPokies_SelectionChanged"/>
        <Label Content="Select a pokie" HorizontalAlignment="Left" Margin="37,26,0,0" VerticalAlignment="Top"/>
        <Image x:Name="imgPokemon" HorizontalAlignment="Left" Height="160" Margin="577,209,0,0" VerticalAlignment="Top" Width="214"/>
        <Button x:Name="btnToggle" Content="Toggle Image" HorizontalAlignment="Left" Margin="604,381,0,0" VerticalAlignment="Top" Height="43" Width="112" Click="btnToggle_Click"/>

    </Grid>
</Window>
