<Window x:Class="JSON_Serialization.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_Serialization"
        mc:Ignorable="d"
        Title="MainWindow" Height="477" Width="800">
    <Grid>
        <ComboBox x:Name="cboPlatforms" HorizontalAlignment="Left" Margin="36,91,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboPlatforms_SelectionChanged"/>
        <ListBox x:Name="lstGames" Margin="400,0,0,0" Height="406" VerticalAlignment="Top" MouseDoubleClick="lstGames_MouseDoubleClick"/>
        <Label x:Name="lblResultCount" Content="Result Count: 1,800" HorizontalAlignment="Left" Margin="464,411,0,0" Width="178" Height="32" VerticalAlignment="Top" FontSize="18"/>
        <Button x:Name="btnExport" Content="Export Data" HorizontalAlignment="Left" Margin="184,349,0,0" VerticalAlignment="Top" Height="57" Width="116" Click="btnExport_Click"/>

    </Grid>
</Window>
